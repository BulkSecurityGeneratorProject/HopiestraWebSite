<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity InternationalArticle.
    -->
    <changeSet id="20180605125958-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="language_id"
                                 baseTableName="international_article"
                                 constraintName="fk_international_article_language_id"
                                 referencedColumnNames="id"
                                 referencedTableName="language"/>

        <addForeignKeyConstraint baseColumnNames="international_articles_id"
                                 baseTableName="international_article_tags"
                                 constraintName="fk_international_article_tags_international_articles_id"
                                 referencedColumnNames="id"
                                 referencedTableName="international_article"/>
        <addForeignKeyConstraint baseColumnNames="tags_id"
                                 baseTableName="international_article_tags"
                                 constraintName="fk_international_article_tags_tags_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tag"/>
        
        <addForeignKeyConstraint baseColumnNames="article_id"
                                 baseTableName="international_article"
                                 constraintName="fk_international_article_article_id"
                                 referencedColumnNames="id"
                                 referencedTableName="article"/>

    </changeSet>
</databaseChangeLog>
